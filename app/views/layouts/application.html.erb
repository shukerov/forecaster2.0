    <%= hotwire_livereload_tags if Rails.env.development? %>
  </head>

  <body class="bg-sky-100">
    <main class="container mx-auto mt-14 px-5">
      <h1 class="text-center text-4xl mb-10 font-sans text-amber-600 font-bold">FORECASTER</h1>
      <%= yield %>
    </main>
  </body>
</html>
